<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Product</title>
  <link href="/styles.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/styles.css"> 
  <script src="/javascripts/flash-message.js" defer></script>
</head>

<body class="bg-gray-100 h-screen flex justify-center items-center">
  <% if (message && message.length > 0) { %>
  <div id="flash-message" class="z-10 bg-green-600 text-white font-semibold p-2 rounded-md mb-4 w-30 absolute top-5 left-1/2 transform -translate-x-1/2">
    <h2><%= message %></h2>
  </div>
  <% } %>

  <div class="bg-white shadow-lg rounded-lg w-full max-w-5xl p-8 flex items-stretch">

    <!-- Product Details Section -->
    <form action="/products/create" method="POST" class="w-full flex flex-wrap gap-8" enctype="multipart/form-data">

      <div class="flex-1 p-6 space-y-6">
        <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Product Details</h2>

        <input type="text" name="product_name" placeholder="Product Name" class="w-full px-5 py-3 border rounded-lg focus:outline-none focus:border-blue-600 text-lg" required>
        <input type="number" name="price" placeholder="Price" class="w-full px-5 py-3 border rounded-lg focus:outline-none focus:border-blue-600 text-lg" required>
        <input type="number" name="discount" placeholder="Discount" class="w-full px-5 py-3 border rounded-lg focus:outline-none focus:border-blue-600 text-lg">
        <input type="file" name="image" accept="image/*" placeholder="file_name" class="w-full px-5 py-3 border rounded-lg focus:outline-none focus:border-blue-600 text-lg" required>
      </div>

      <!-- Divider -->
      <div class="flex items-center justify-center px-4 my-auto">
        <div class="bg-green-600 text-white rounded-full w-12 h-12 flex items-center justify-center">
          <span class="text-sm font-semibold">and</span>
        </div>
      </div>

      <!-- Panel Details Section -->
      <div class="flex-1 p-6 space-y-6">
        <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Panel Details</h2>

        <input type="text" name="bgcolor" placeholder="Background Color" class="w-full px-5 py-3 border rounded-lg focus:outline-none focus:border-blue-600 text-lg" required>
        <input type="text" name="panel_color" placeholder="Panel Color" class="w-full px-5 py-3 border rounded-lg focus:outline-none focus:border-blue-600 text-lg" required>
        <input type="text" name="text_color" placeholder="Text Color" class="w-full px-5 py-3 border rounded-lg focus:outline-none focus:border-blue-600 text-lg" required>
      </div>

      <!-- Submit Button -->
      <div class="w-full flex justify-center mt-3">
        <button type="submit" class="px-8 py-3 bg-green-600 text-white font-semibold rounded-full hover:bg-green-700 transition-colors text-lg shadow-lg">
          Submit
        </button>
      </div>
    </form>

  </div>

</body>

</html>
