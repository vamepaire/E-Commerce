<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart</title>
  <link href="/styles.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="/javascripts/flash-message.js" defer></script>
</head>

<body class="bg-white">

  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">Shopping Cart</h1>

    <table class="table-auto w-full border-collapse border border-gray-300">
      <thead>
        <tr class="bg-gray-100">
          <th class="border border-gray-300 p-2">Product</th>
          <th class="border border-gray-300 p-2">Price</th>
          <th class="border border-gray-300 p-2">Quantity</th>
          <th class="border border-gray-300 p-2">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% cartItems.forEach(function(item) { %>
        <tr>
          <td class="border border-gray-300 p-2"><%= item.product_name %></td>
          <td class="border border-gray-300 p-2">$<%= item.price.toFixed(2) %></td>
          <td class="border border-gray-300 p-2">
            <input type="number" class="w-8 p-1 text-center" value="<%= item.quantity %>" min="1" max="100" />
          </td>
          <td class="border border-gray-300 p-2">$<%= (item.price * item.quantity).toFixed(2) %></td>
        </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr class="bg-gray-200">
          <td colspan="3" class="text-right p-2">Total:</td>
          <td id="total" class="p-2">$<%= total.toFixed(2) %></td>
        </tr>
      </tfoot>
    </table>
  </div>

</body>
